    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "jest-cli": "^24.8.0",
    "jest-enzyme": "^7.0.2",
    "jest-junit": "^7.0.0",
    "jest-transform-stub": "^2.0.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "webpack-dev-server": "^3.7.2"
  }
