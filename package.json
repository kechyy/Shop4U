{
  "name": "shop4u",
  "version": "1.0.0",
  "description": "Development of a Web & Mobile App that will allow users to shop for groceries and other household good from the comfort of their home. Unlike similar grocery shopping apps Shop4U shall allow users to select the stores they wish to purchase the goods from and compare prices to get the best deal.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint **/*.js",
    "lint:fix": "prettier-eslint \"**/*.{js,json}\" --write",
    "prettier": "prettier **/*.{js,json} --write",
    "develop": "webpack --env.mode development --watch",
    "start:dev": "rm -rf client/dist && webpack-dev-server --env.mode development --open --hot",
    "build": "webpack --env.mode production",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "start": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kechyy/Shop4U.git"
  },
  "author": "Nkechi Ogbonna",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kechyy/Shop4U/issues"
  },
  "homepage": "https://github.com/kechyy/Shop4U#readme",
  "dependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "express": "^4.17.1",
    "file-loader": "^4.1.0",
    "glob": "^7.1.4",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "purgecss-webpack-plugin": "^1.5.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "terser-webpack-plugin": "^2.1.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "@testing-library/react": "^9.1.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^3.2.0",
    "coveralls": "^3.0.6",
    "dotenv": "^8.1.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-cypress": "^2.6.0",
